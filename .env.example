# Configuración de entorno para GILIA

# Modo de datos (true para usar mock data, false para API real)
VITE_USE_MOCK_DATA=true

# URL base de la API (solo se usa cuando USE_MOCK_DATA=false)
VITE_API_BASE_URL=http://localhost:3001/api

# Endpoint de autenticación
VITE_AUTH_ENDPOINT=/auth

# Configuración de logging (true para habilitar logs en consola)
VITE_ENABLE_LOGGING=true

# Configuración de desarrollo
VITE_APP_TITLE=GILIA - Grupo de Investigación
VITE_APP_DESCRIPTION=Sistema de gestión para el Grupo de Investigación GILIA

# URLs de servicios externos (opcional)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Configuración de archivos
VITE_MAX_FILE_SIZE=50
VITE_ALLOWED_FILE_TYPES=jpg,png,pdf,docx,mp4

# Configuración de sesión
VITE_SESSION_TIMEOUT=30
